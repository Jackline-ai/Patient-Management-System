package com.patientmis.kafka;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.patientmis.dto.PatientRegistrationEvent;
import com.patientmis.dto.ServiceRegistrationEvent;

@Service
public class RegistrationKafkaConsumer {

    @KafkaListener(topics = "patient-registrations", groupId = "patient-registrations-group")

    public void handlePatientRegistration(PatientRegistrationEvent event) {
	System.out.println("Received patient registration via kafka:");
	System.out.println("Patient: " + event.getFullName());
	System.out.println("Phone: " + event.getPhoneNumber());
	System.out.println("Email: " + event.getEmail());

    }

    @KafkaListener(topics = "service-registrations", groupId = "service-registrations-group")
    public void handleServiceRegistration(ServiceRegistrationEvent event) {
	System.out.println("Service registration received via kafka: ");
	System.out.println("Service: " + event.getServiceName());
	System.out.println("Quantity: " + event.getQuantity());
	System.out.println("Price: " + event.getPrice());
	System.out.println("Discount: " + event.getDiscount());
	System.out.println("Total: " + event.getTotal());
    }
}
